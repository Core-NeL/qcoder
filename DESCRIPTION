Package: qcoder
Title: Lightweight qualitative coding
Version: 0.0.1
Authors@R: c( 
  person("Beth", "Duckles", email = "bduckles@gmail.com", role = c("aut")), 
  person("Dan", "Sholler", email = "sholler.daniel@gmail.com", role = c("aut")),
